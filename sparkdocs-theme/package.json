{
  "name": "sparkdocs-theme",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite build --watch",
    "build": "vite build",
    "build:copy": "vite build && node scripts/copy-to-sparktype.js",
    "copy": "node scripts/copy-to-sparktype.js",
    "watch": "chokidar \"dist/styles.css\" -c \"npm run copy\""
  },
  "devDependencies": {
    "@tailwindcss/vite": "^4.0.0-alpha.25",
    "chokidar": "^4.0.3",
    "chokidar-cli": "^3.0.0",
    "tailwindcss": "^4.0.0-alpha.25",
    "vite": "^5.4.11"
  }
}
